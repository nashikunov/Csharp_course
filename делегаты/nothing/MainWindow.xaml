<Window x:Class="nothing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nothing"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FF0ABAB5">
        
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Margin="0 50 0 10" Text="Введите имя гостя"/>
            <TextBox x:Name="TextBox" Margin="100 0 100 30" Padding="2"  />
            <Button x:Name="OkButton" Click="OkButton_Click" Content="OK" Width="100" Background="#FFF1ACAC"  />
            
        </StackPanel>
    </Grid>
</Window>
